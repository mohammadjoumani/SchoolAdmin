<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    android:clickable="true"    android:elevation="8dp"    android:focusable="true"    android:foreground="?attr/selectableItemBackground"    app:cardCornerRadius="10dp">    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/white">        <RelativeLayout            android:id="@+id/relativeRecyclerStudent"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_marginEnd="5dp"            android:background="@color/garyplus">            <ImageView                android:id="@+id/imgRecyclerStudent"                android:layout_width="100dp"                android:layout_height="100dp"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_student_recycler" />        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginEnd="10dp"            android:layout_toEndOf="@+id/relativeRecyclerStudent">            <TextView                android:id="@+id/txtRecyclerStudentName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="5dp"                android:fontFamily="@font/roboto_regular"                android:text="@string/name_student"                android:textColor="@color/black"                android:textSize="20sp" />            <LinearLayout                android:id="@+id/linearRecyclerRecentProject"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerStudentName"                android:layout_marginBottom="5dp"                android:orientation="horizontal">                <ImageView                    android:id="@+id/imgRecyclerStudentIcon"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_gravity="center"                    android:src="@drawable/ic_class" />                <TextView                    android:id="@+id/txtRecyclerStudentClassName"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="@font/roboto_light"                    android:text="@string/class_name"                    android:layout_gravity="center"                    android:layout_marginStart="5dp"                    android:textColor="@color/black"                    android:textSize="16sp" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/linearRecyclerRecentProject">                <ImageView                    android:id="@+id/imgRecyclerStudentIconPhone"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_gravity="center"                    android:src="@drawable/ic_phonee" />                <TextView                    android:id="@+id/txtRecyclerStudentPhone"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:fontFamily="@font/roboto_light"                    android:text="099789494"                    android:layout_gravity="center"                    android:layout_marginStart="5dp"                    android:textColor="@color/black"                    android:textSize="16sp" />            </LinearLayout>            <TextView                android:id="@+id/txtRecyclerStudentState"                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_below="@id/txtRecyclerStudentName"                android:layout_alignParentEnd="true"                android:background="@drawable/bg_state_true"/>        </RelativeLayout>    </RelativeLayout></androidx.cardview.widget.CardView>