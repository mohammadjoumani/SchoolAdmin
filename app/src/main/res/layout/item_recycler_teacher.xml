<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    android:clickable="true"    android:elevation="8dp"    android:focusable="true"    android:foreground="?attr/selectableItemBackground"    app:cardCornerRadius="10dp">    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/white">        <RelativeLayout            android:id="@+id/relativeRecyclerRecentProject"            android:layout_width="90dp"            android:layout_height="90dp"            android:layout_marginEnd="5dp"            android:background="#50bebf">            <ImageView                android:id="@+id/imgRecyclerStudent"                android:layout_width="90dp"                android:layout_height="90dp"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_teacher" />        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginEnd="10dp"            android:layout_toEndOf="@+id/relativeRecyclerRecentProject">            <TextView                android:id="@+id/txtRecyclerTeacherName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="15dp"                android:fontFamily="@font/roboto_regular"                android:text="@string/name_teacher"                android:textColor="@color/black"                android:textSize="20sp" />            <LinearLayout                android:id="@+id/linearRecyclerRecentProject"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerTeacherName"                android:layout_marginBottom="10dp"                android:orientation="horizontal">                <ImageView                    android:id="@+id/imgRecyclerTeacherIcon"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_gravity="center"                    android:src="@drawable/ic_subject" />                <TextView                    android:id="@+id/txtRecyclerTeacherSubjectName"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="@font/roboto_light"                    android:text="@string/subject_name"                    android:gravity="center"                    android:textColor="@color/black"                    android:textSize="18sp" />            </LinearLayout>            <TextView                android:id="@+id/txtRecyclerTeacherState"                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_centerVertical="true"                android:layout_alignParentEnd="true"                android:background="@drawable/bg_state_true"/>        </RelativeLayout>    </RelativeLayout></androidx.cardview.widget.CardView>